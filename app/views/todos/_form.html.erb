<!-- app/views/todos/_form.html.erb -->

<%= form_with(model: @todo, local: true) do |form| %>
  <div class="field">
    <%= form.label :action %>
    <%= form.text_field :action %>
    <%= form.label :description %>
    <%= form.text_field :description %>
  </div>

  <div class="field">
    <%= form.label :rating %>
    <%= form.select :rating, ['Good', 'Okay', 'Bad'] %>
  </div>

  <div class="actions">
    <%= form.submit 'Create Todo' %>
  </div>
<% end %>
